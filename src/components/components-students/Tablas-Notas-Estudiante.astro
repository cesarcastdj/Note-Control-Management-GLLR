---
import "../../style/variables.css";
import "../../style/global.css";
import "../../style/style-admin/data-table.css";
---

<section class="data-content-section">
  <section class="search-content-data">
    <div class="welcome-search-data">
      <h2 class="welcome-search-data__title">Mis Notas</h2>
      <p class="welcome-search-data__text">
        Aquí puedes visualizar tus evaluaciones y descargar tu boletín de notas.
      </p>
    </div>
  </section>

  <section class="content-info-data">
    <section class="display-table">
      <div class="content-table1">
        <div class="table-person">
          <button
            class="btn btn-primary d-flex align-items-center gap-2 toggle-icon"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#tableNotas"
            aria-expanded="true"
            aria-controls="tableNotas"
          >
            <i class="bx bx-chevron-down"></i>
            <h4 class="m-0">Evaluaciones y Notas</h4>
          </button>
        </div>
        <div class="type-data">
          <span>Listado de evaluaciones y calificaciones</span>
        </div>
      </div>

      <div class="collapse show" id="tableNotas">
        <div class="tabla-info-person">
          <table class="blueTable">
            <thead>
              <tr>
                <th>Materia</th>
                <th>Evaluación</th>
                <th>Fecha</th>
                <th>Nota</th>
                <th>Observaciones</th>
              </tr>
            </thead>
            <tbody id="notasTableBody">
              <!-- Las notas se cargarán dinámicamente -->
            </tbody>
          </table>
        </div>
        <div class="student-actions mt-3" style="display: flex; gap: 1rem;">
          <button class="btn btn-primary" id="descargarNotas">
            <i class="bx bxs-file-pdf"></i> Descargar Boletín
          </button>
          <button class="btn btn-secondary" id="mensajeProfesor">
            <i class="bx bx-message"></i> Enviar Mensaje al Profesor
          </button>
        </div>
      </div>
    </section>
  </section>
</section>
