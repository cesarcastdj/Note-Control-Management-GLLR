{
  "extends": "astro/tsconfigs/strict",
  "include": ["src/ts/**/*.ts"],
  "exclude": ["dist", "src/layouts", "src/components", "src/types"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "rootDir": "./src/ts",
    "outDir": "./src/js",
    "baseUrl": "./src",
    "noEmit": false,
    "paths": {
      "@components/*": ["src/components/*"],
      "@types/*": ["src/Types/*"]
    }
  }
}
