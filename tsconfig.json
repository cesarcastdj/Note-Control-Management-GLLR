{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src/**/*"],
  "exclude": ["dist", "src/js"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "rootDir": "src",
    "outDir": "src/js",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@types/*": ["src/Types/*"]
    }
  }
}
